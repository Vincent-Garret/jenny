{% extends "base.html.twig" %}

{% block body %}
    <div class="row first justify-content-between mx-0">
        <div class="col-4">
            <h1 class="first">Jenny Morgan James</h1>
        </div>
        <div class="col-4">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.name, { 'attr' : {'placeholder' : 'Nom Prénom *', 'class': 'name form-control mt-2' }} ) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.mail, {'attr' : {'placeholder' : 'Adresse mail *', 'class' : 'mail form-control mt-2' }} ) }}
                {{ form_errors(form.mail) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.phone, {'attr' : {'placeholder' : 'Téléphone', 'class' : 'phone form-control mt-2' }} ) }}
                {{ form_errors(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.message, {'attr' : {'placeholder' : 'Message *', 'class' : 'message form-control mt-2'}} ) }}
                {{ form_errors(form.message) }}
            </div>

            {{ form_widget(form.submit, {'attr' : {'class' : 'submit btn btn-primary mt-2'}} ) }}
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}